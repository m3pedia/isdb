!!!
%html
  %head
    %link{:rel => "icon", :type => "image/x-icon", :href => "/assets/favicon.ico"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "ISDB"
      %meta{:content => content_for?(:description) ? yield(:description) : "ISDB", :name => "description"}
        = stylesheet_link_tag "application", :media => "all"
        = javascript_include_tag "application"
        = csrf_meta_tags
        = yield(:head)
      %script{type: "text/javascript", src: "http://j.maxmind.com/app/geoip.js"}
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      %nav.navbar-inner
        .container-fluid
          = render 'layouts/navigation'
          #element_to_pop_up 
    .container-fluid
      .row-fluid
        .span12
          = yield
    %nav.modal-footer
      isdb. &copy; Copyright 2013.
      / ! end of .container
    / ! end of #main
